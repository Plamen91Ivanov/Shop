@model Shop.Web.ViewModels.Create.ProductsInputModel
<style>
    .product-col{
        margin-right: 25px;
    }
</style>

    <div class="text-center bg-light promo-container blockquote">
        <div class="text-center">
            <h1>Моите обяви</h1>
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-3 product-col">
                        <a href="/product/@product.Url">
                            <div class="card shadow bg-white rounded" style="width: 18rem;">
                                <img class="card-image" src="http://res.cloudinary.com/ds1ne4hps/image/upload/@product.Image">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="card-text">@product.Price $</p>
                                </div>
                            </div>
                        </a>
                    </div>}
            </div>
        </div>
    </div>
