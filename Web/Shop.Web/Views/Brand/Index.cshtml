@model Shop.Web.ViewModels.Brand.BrandsViewModel


<h1>Brands</h1>
<a asp-controller="Brand" asp-action="Create" class="btn btn-secondary">Create brand</a>
<hr />
<div class="text-center categories bg-light promo-container blockquote">
    <a asp-controller="Brand" asp-action="Index">
        <h3>Brands</h3>
    </a>
    <div class="row category-items">
        @foreach (var brand in Model.Brands)
        {
<div class="col-2">
    <a href="/brand/brand/@brand.Id"><img class="brand-image" src="http://res.cloudinary.com/ds1ne4hps/image/upload/@brand.Logo" /></a>
    <h5>@brand.Name</h5>
    <h5>@brand.Description</h5>
</div>}
    </div>
</div>

<div class="row">
    @foreach (var brand in Model.Brands)
    {
<div class="col-3">
    <a href="/brand/brand/@brand.Id"><img class="img-thumbnail" src="http://res.cloudinary.com/ds1ne4hps/image/upload/@brand.Logo" /></a>
    <h5>@brand.Name</h5>
    <h5>@brand.Description</h5>
</div>}
</div>
